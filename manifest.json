{
  "name": "@deskpro-apps/calendly",
  "title": "Calendly",
  "description": "Integrate Calendly with Deskpro",
  "version": "0.0.13",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [
    { "target": "ticket_sidebar", "entrypoint": "index.html#/ticket" },
    { "target": "user_sidebar", "entrypoint": "index.html#/user" },
    { "target": "global", "entrypoint": "index.html#/global" }
  ],
  "settings": {
    "todo_needs_oauth2": {
      "title": "@todo: OAuth",
      "description": "Example backend only setting",
      "type": "string",
      "isRequired": false,
      "isBackendOnly": true
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://api.calendly.com/.*",
        "methods": ["GET"],
        "timeout": 20
      }
    ]
  }
}
